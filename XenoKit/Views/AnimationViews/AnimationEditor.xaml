<UserControl x:Class="XenoKit.Views.AnimationViews.AnimationEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:XenoKit.Views.AnimationViews"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:anim="clr-namespace:Xv2CoreLib.AnimationFramework;assembly=Xv2CoreLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="UserControl">
    <UserControl.Resources>
        <Style TargetType="{x:Type local:AnimationNodeRowItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type local:AnimationNodeRowItem}">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-5, 5, -5, 5" x:Name="PART_MouseOver">
                                <ContentPresenter.Content>
                                    <Button />
                                </ContentPresenter.Content>
                            </ContentPresenter>
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="PART_ContentHost" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate DataType="{x:Type anim:IAnimationNode}" x:Key="UsedTemplateProperty">
            <Border x:Name="border" Background="Pink" BorderThickness="2" BorderBrush="{Binding TimeLineBorderBrush}" CornerRadius="5" Margin="0,10,0,10" Height="15" Width="15">

            </Border>
        </DataTemplate>
        <ObjectDataProvider x:Key="EditorModeEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:AnimationEditorMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding ElementName=UserControl, Path=SearchFilter, UpdateSourceTrigger=PropertyChanged}" Height="20" Width="175" Margin="10,0,0,0" TextWrapping="Wrap" VerticalContentAlignment="Center" controls:TextBoxHelper.Watermark="Search..." controls:TextBoxHelper.ButtonCommand="{Binding ElementName=UserControl, Path=ClearSearchCommand}" controls:TextBoxHelper.ClearTextButton="True">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding ElementName=UserControl, Path=SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Editor" TextAlignment="Center" VerticalAlignment="Center"/>
            <ComboBox Height="20" Width="100" Margin="5,0" ItemsSource="{Binding Source={StaticResource ResourceKey=EditorModeEnum}}" SelectedItem="{Binding ElementName=UserControl, Path=EditorMode, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <Border Grid.Row="1" Margin="0, 20,5,15" BorderBrush="{DynamicResource MahApps.Brushes.Accent3}" BorderThickness="1">
            <ScrollViewer x:Name="dataGridScroll" PreviewMouseWheel="dataGrid_PreviewMouseWheel" ScrollViewer.VerticalScrollBarVisibility="Hidden">

                <DataGrid x:Name="dataGrid" Grid.Row="1" SelectionMode="Extended" SelectionUnit="FullRow" CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="False" CanUserReorderColumns="False" 
                            AutoGenerateColumns="False" ItemsSource="{Binding ElementName=UserControl, Path=Bones}" SelectedItem="{Binding ElementName=UserControl, Path=SelectedBone, UpdateSourceTrigger=PropertyChanged}"
                            HeadersVisibility="Row" RowHeaderWidth="25" RowDetailsVisibilityMode="Collapsed" RowHeaderStyle="{DynamicResource ExpandableDataGridHeaderStyle}" LoadingRow="dataGrid_LoadingRow"
                            ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Disabled" RowHeight="{Binding ElementName=UserControl, Path=RowSize}" RowDetailsVisibilityChanged="dataGrid_RowDetailsVisibilityChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Bone" Binding="{Binding Name}" IsReadOnly="True"/>
                    </DataGrid.Columns>

                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <DataGrid SelectionMode="Extended" SelectionUnit="FullRow" CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="False" CanUserReorderColumns="False" 
                                      AutoGenerateColumns="False" ItemsSource="{Binding Components}" SelectedItem="{Binding ElementName=UserControl, Path=SelectedComponent, UpdateSourceTrigger=PropertyChanged}"
                                      HeadersVisibility="Row" RowHeaderWidth="25" RowDetailsVisibilityMode="Collapsed" RowHeaderStyle="{DynamicResource ExpandableDataGridHeaderStyle}"
                                      ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Disabled" RowHeight="{Binding ElementName=UserControl, Path=RowSize}" RowDetailsVisibilityChanged="dataGrid_RowDetailsVisibilityChanged">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Component" Binding="{Binding Type}" IsReadOnly="True"/>
                                </DataGrid.Columns>

                                <DataGrid.RowDetailsTemplate>
                                    <DataTemplate>
                                        <ListBox ItemsSource="{Binding Channels.Binding}" DisplayMemberPath="Type">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="Height" Value="{Binding ElementName=UserControl, Path=RowSize}" />
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </ListBox>
                                    </DataTemplate>
                                </DataGrid.RowDetailsTemplate>
                            </DataGrid>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>
            </ScrollViewer>

        </Border>
        
        <Grid Grid.Column="1" Grid.Row="1">

            <!-- Margin is required to account for the vertical scroll bar on mainScroll-->
            <ScrollViewer x:Name="timeScroll" Height="20" Margin="0,0,15,0" HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" VerticalAlignment="Top">
                <Grid Cursor="Hand">
                    <Canvas x:Name="canvasForFrameMarkings" VerticalAlignment="Top" HorizontalAlignment="Left" Height="20" Width="{Binding ElementName=UserControl, Path=CurrentWidth}"/>
                    <Slider Style="{DynamicResource MahApps.Styles.Slider.Flat}" VerticalAlignment="Top" HorizontalAlignment="Left" Height="20" Width="{Binding ElementName=UserControl, Path=CurrentWidth}" 
                  Minimum="0" Maximum="{Binding ElementName=UserControl, Path=Length}" Interval="1" Value="{Binding ElementName=UserControl, Path=SelectedFrame, UpdateSourceTrigger=PropertyChanged}"
                  Foreground="Transparent" BorderBrush="Transparent" Background="Transparent" IsMoveToPointEnabled="True"/>
                </Grid>
            </ScrollViewer>

            <ScrollViewer x:Name="mainScroll" Margin="0, 20,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" ScrollChanged="ExternalScrollViewer_ScrollChanged" PreviewMouseWheel="mainScroll_PreviewMouseWheel">
                <Grid x:Name="mainScollGrid" MouseDown="Grid_MouseDown" MouseUp="Grid_MouseUp" MouseMove="Grid_MouseMove" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="Auto">
                    <StackPanel x:Name="mainScrollPanel">
                        <Grid Height="Auto">
                            <Canvas x:Name="canvasForFrameLines" VerticalAlignment="Top" HorizontalAlignment="Left" Width="{Binding ElementName=UserControl, Path=CurrentWidth}" Height="{Binding ElementName=UserControl, Path=CurrentHeight}"/>
                            <Canvas x:Name="canvasForSecondLines" VerticalAlignment="Top" HorizontalAlignment="Left" Width="{Binding ElementName=UserControl, Path=CurrentWidth}" Height="{Binding ElementName=UserControl, Path=CurrentHeight}"/>
                            <ItemsControl x:Name="itemsControl" ItemsSource="{Binding ElementName=UserControl, Path=Rows}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                            <Canvas Width="{Binding ElementName=UserControl, Path=CurrentWidth}" Height="{Binding ElementName=UserControl, Path=CurrentHeight}">
                                <Rectangle x:Name="selectionBox" Visibility="Collapsed" Stroke="{DynamicResource MahApps.Brushes.Accent}" StrokeThickness="1" StrokeDashArray="2,1"/>
                            </Canvas>
                        </Grid>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
